<Window x:Name="window" x:Class="Ymf825MidiDriver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ymf825MidiDriver"
        xmlns:talex="http://schemas.talex-soft.com/2010/xaml/presentation"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="YMF825 MIDI Driver" Height="714.766" Width="1199" ResizeMode="NoResize">
    <Window.Resources>
        <system:String x:Key="Algorithms">0, 1, 2, 3, 4, 5, 6, 7</system:String>
        <local:AlgorithmConverter x:Key="AlgorithmConverter" />
        <local:OperatorEnabledConveter x:Key="OperatorEnabledConveter" />
    </Window.Resources>
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="新規作成(_N)" />
                <MenuItem Header="開く(_O)" />
                <Separator />
                <MenuItem Header="保存(_S)" />
                <MenuItem Header="名前を付けて保存(_S)" />
                <Separator />
                <MenuItem Header="終了(_X)" />
            </MenuItem>
            <MenuItem Header="ヘルプ(_H)" />
        </Menu>
        <ToolBarTray Margin="0,20,0,0" Height="26" VerticalAlignment="Top">
        </ToolBarTray>
        <ListBox HorizontalAlignment="Left" Margin="0,46,0,0" Width="160"/>
        <GroupBox Header="トーン" Height="113" Margin="165,51,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="808">
            <Grid>
                <Label Content="アルゴリズム" HorizontalAlignment="Left" Margin="265,34,0,0" VerticalAlignment="Top"/>
                <Label Content="基本オクターブ" HorizontalAlignment="Left" Margin="550,8,0,0" VerticalAlignment="Top"/>
                <Label Content="LFO周波数" HorizontalAlignment="Left" Margin="550,34,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="ComboBoxAlgorithm" HorizontalAlignment="Left" Margin="330,9,0,0" Width="206" Height="78" VerticalAlignment="Top" ItemsSource="{Binding Converter={StaticResource AlgorithmConverter}, Mode=OneWay, Source={StaticResource Algorithms}}" SelectedIndex="0"/>
                <ComboBox x:Name="ComboBoxBasicOctave" HorizontalAlignment="Left" Margin="632,9,0,0" Width="140" Height="24" VerticalAlignment="Top" SelectedIndex="{Binding BasicOctave, ElementName=window, FallbackValue=1, Mode=TwoWay, TargetNullValue=1}">
                    <ComboBoxItem Content="x2"/>
                    <ComboBoxItem Content="x1"/>
                    <ComboBoxItem Content="x0.5"/>
                    <ComboBoxItem Content="x0.25"/>
                </ComboBox>
                <ComboBox HorizontalAlignment="Left" Margin="632,36,0,0" Width="140" Height="24" VerticalAlignment="Top" SelectedIndex="0">
                    <ComboBoxItem Content="1.8 Hz"/>
                    <ComboBoxItem Content="4.0 Hz"/>
                    <ComboBoxItem Content="5.9 Hz"/>
                    <ComboBoxItem Content="7.0 Hz"/>
                </ComboBox>
                <Label Content="定位" HorizontalAlignment="Left" Margin="8,61,0,0" VerticalAlignment="Top"/>
                <Label Content="プログラム #" HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top"/>
                <ComboBox HorizontalAlignment="Left" Margin="109,36,0,0" Width="140" Height="24" VerticalAlignment="Top" IsEnabled="{Binding IsChecked, ElementName=CheckBoxIsPercussion}"/>
                <talex:NumericUpDown VerticalAlignment="Top" Height="24" Margin="109,9,0,0" HorizontalAlignment="Left" Width="140" Maximum="127"/>
                <ComboBox HorizontalAlignment="Left" Margin="109,63,0,0" Width="140" Height="24" VerticalAlignment="Top" SelectedIndex="1">
                    <ComboBoxItem Content="左 (Lch)"/>
                    <ComboBoxItem Content="中央 (Lch, Rch)"/>
                    <ComboBoxItem Content="右 (Rch)"/>
                </ComboBox>
                <CheckBox x:Name="CheckBoxIsPercussion" Content="パーカッション #" HorizontalAlignment="Left" Margin="12,41,0,0" VerticalAlignment="Top"/>
            </Grid>

        </GroupBox>
        <local:OperatorParameter HorizontalAlignment="Left" Margin="165,170,0,0" Width="250" OperatorNumber="1" HasFeedback="True" Height="501" VerticalAlignment="Top"/>
        <local:OperatorParameter HorizontalAlignment="Left" Margin="420,170,0,0" Width="250" OperatorNumber="2" VerticalAlignment="Top" Height="501"/>
        <local:OperatorParameter HorizontalAlignment="Left" Margin="675,170,0,0" Width="250" OperatorNumber="3" HasFeedback="True" IsEnabled="{Binding SelectedIndex, Converter={StaticResource OperatorEnabledConveter}, ElementName=ComboBoxAlgorithm}" VerticalAlignment="Top" Height="501"/>
        <local:OperatorParameter HorizontalAlignment="Left" Margin="930,170,0,0" Width="250" OperatorNumber="4" IsEnabled="{Binding SelectedIndex, Converter={StaticResource OperatorEnabledConveter}, ElementName=ComboBoxAlgorithm}" VerticalAlignment="Top" Height="501"/>

    </Grid>
</Window>
